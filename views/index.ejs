<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="/build.css" rel="stylesheet" />
  <title>Exclusive Message Board</title>
</head>
<body class="bg-gradient-to-br from-indigo-100 via-purple-100 to-slate-100 min-h-screen font-sans text-slate-800">

  <div class="max-w-3xl mx-auto py-10 px-4">
    <h1 class="text-4xl font-extrabold text-center text-indigo-600 mb-6">Exclusive Message Board</h1>

    <% if (user) { %>
      <div class="text-center mb-6">
        <p class="text-lg">Welcome, <span class="font-semibold text-purple-700"><%= user.username %></span>!</p>
        <div class="mt-4 space-x-4">
          <a href="/user/logout" class="text-sm text-indigo-600 hover:underline">Log Out</a>
          <a href="/user/create_message" class="text-sm text-indigo-600 hover:underline">Create Message</a>
          <% if (!user.member_status) { %>
            <a href="/user/join" class="text-sm text-purple-600 hover:underline">Join the Club</a>
          <% } %>
        </div>
      </div>
    <% } else { %>
      <div class="text-center mb-6 space-x-4">
        <a href="/user/signup" class="text-sm text-indigo-600 hover:underline">Sign Up</a>
        <a href="/user/signin" class="text-sm text-indigo-600 hover:underline">Sign In</a>
      </div>
    <% } %>

    <h2 class="text-2xl font-bold text-center text-slate-700 mb-6">Messages</h2>

    <ul class="flex flex-col items-center space-y-6 list-none">
      <% messages.forEach(message => { %>
        <li class="bg-white shadow-lg rounded-xl p-6 w-full max-w-xl border border-slate-200">
          <strong class="text-xl font-semibold text-indigo-700 block mb-2"><%= message.title %></strong>
          <p class="text-slate-700 mb-3"><%= message.content %></p>
          <% if (user?.member_status) { %> 
            <p class="text-sm text-purple-600">From <%= message.username %></p>
            <small class="text-xs text-slate-500 block mt-1"><%= new Date(message.created_at).toLocaleString() %></small>
          <% } %>
        </li>
      <% }) %>
    </ul>
  </div>

</body>
</html>
